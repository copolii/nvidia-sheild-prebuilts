<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/controller_settings"
        android:key="controller_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
            android:title="@string/nv_controller_mapper"/>
    <CheckBoxPreference
        android:key="controller_mapper_enable"
        android:title="@string/controller_mapper_enable"
        android:summary="@string/controller_mapper_enable_summary"
        android:persistent="true" />
    <CheckBoxPreference
        android:key="controller_mapper_enable_auto_download"
        android:title="@string/controller_mapper_enable_auto_download"
        android:summary="@string/controller_mapper_enable_auto_download_summary"
        android:persistent="true" />

    <PreferenceCategory
            android:title="@string/nv_category_vmouse"/>
    <CheckBoxPreference
        android:key="controller_rsmouse"
        android:title="@string/controller_rsmouse_text"
        android:summary="@string/controller_rsmouse_summary"
        android:persistent="true" />

    <com.android.settings.PointerSpeedPreference
       android:key="pointer_speed"
       android:title="@string/pointer_speed"
       android:dialogTitle="@string/pointer_speed" />

    <PreferenceCategory
            android:title="@string/nv_category_controller_volume"/>
    <CheckBoxPreference
        android:key="controller_volume"
        android:title="@string/controller_volume_text"
        android:summary="@string/controller_volume_summary"
        android:persistent="true" />

    <PreferenceCategory
            android:title="@string/nv_nvidia_button"/>
    <com.android.settings.ShieldLEDPreference
       android:key="nv_shield_led_brightness"
       android:title="@string/nv_led_brightness"
       android:dialogTitle="@string/nv_led_brightness" />

    <CheckBoxPreference
        android:key="nv_shield_led_breathe"
        android:title="@string/controller_pulse_led"
        android:persistent="true" />
</PreferenceScreen>
